{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Rich People Distribution",
    "subtitle": "The Share of the Richest around the world",
    "subtitleFontStyle": "italic",
    "fontSize": 16,
    "subtitleFontSize": 13,
    "anchor": "start",
    "color": "#e1e5e4",
    "subtitleColor": "#e1e5e4"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/olilambourn/olilambourn.github.io/main/richpeople.csv"
  },
 
  "width": 300,
  "height": 300,
  "background": "#273349",
  "mark": {"type": "arc", "innerRadius": 80, "stroke": "white"},
  "encoding": {
    "theta": {"aggregate": "sum", "field": "10-50 m", "type": "quantitative"},
    "color": {
      "scale": {"scheme": "tableau20"},
      "field": "Country",
      "type": "nominal",
      "legend": null

    },
        
    "tooltip": [{"field": "Country", "type": "nominal"},
    {"field": "10-50 m", "type": "quantitative"}]
  }
}
