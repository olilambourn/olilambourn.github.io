{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "IMF Credit Outstanding",
      "subtitle":"in SDRs for all members from 1984 - 2022 ($b). Source: IMF",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
  "data":{"url": "https://raw.githubusercontent.com/olilambourn/olilambourn.github.io/main/IMF%20Credit.csv"},

  "transform": [
    {"calculate": "datum.Totals/1000000000", "as": "billions"}
  ],
  
  "height": 200,
  "width": 200,

  "mark": {
    "type": "bar",
    "color": "rgb(0,47,167)"},

"encoding": {
     "x": {
       "field": "Years",
       "type": "temporal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "billions",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}}
}
}
